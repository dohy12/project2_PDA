<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/board_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="-1"/>

            <TextView
                android:id="@+id/board_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:text="가나다라 마바사 아자차카 타파하 글자 길이가 너무 길어서 넘어갈때는 제목이 이렇게 됩니다 안녕하세요 아무말 적기"
                android:textColor="#000000"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/board_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="이도희 21:40 조회 4"
                android:textSize="14dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/board_comments_num"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/board_comment"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="#909090"/>
</LinearLayout>