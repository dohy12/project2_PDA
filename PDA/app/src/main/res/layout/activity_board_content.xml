<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Board_content">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:text="전체글"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:text="공지사항"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:paddingLeft="10dp"
                    android:hint="검색"
                    android:textSize="12dp"
                    android:background="@drawable/border"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:text="검색"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:onClick="goBoardWriting"
                    android:textColor="#000000"
                    android:text="글쓰기"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#909090"/>
            <TextView
                android:id="@+id/board_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing"
                android:textSize="14dp"
                android:textColor="#000000"
                android:padding = "15dp"
                android:background="#f0f0f0"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#909090"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:background="@drawable/border_corner1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img6"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/board_mem_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="이도희"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/board_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="2015.05.15 21:40 조회수 222"
                        android:textSize="14dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/img7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginBottom="8dp"
                    android:background="#909090"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/board_survey_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/board_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/board_container"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/test_tring"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#909090"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f0"
                android:padding = "15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/board_comments_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글 4"
                    android:textSize="14dp"
                    android:textColor="#000000"/>

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon9"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#909090"/>

            <LinearLayout
                android:id="@+id/board_comments_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#909090"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:padding="15dp"
                android:background="@null"
                android:textColor="#000000"
                android:hint="댓글입력"/>

            <Button
                android:layout_marginRight="5dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#909090"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:text="등록"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>